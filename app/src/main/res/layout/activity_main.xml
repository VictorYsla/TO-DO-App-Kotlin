<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/yellow"
    >
    <TextView
        android:id="@+id/textView"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="To Do List Application (TM)"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="26dp"
        app:fontFamily="@font/amaranth_regular" />

    <EditText
        android:hint="Add an item"
        android:id="@+id/editView"
        android:layout_below="@id/textView"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />
    <LinearLayout
        android:divider="@drawable/divider8p"
        android:id="@+id/linearLayout1"
        android:layout_below="@id/editView"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:showDividers="middle" >

        <Button
            android:id="@+id/addButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Add" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Delete" />

        <Button
            android:id="@+id/clearButton"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Clear" />

    </LinearLayout>

    <TextView
        android:fontFamily="@font/amaranth_regular"
        android:gravity="center"
        android:id="@+id/textView1"
        android:layout_below="@+id/linearLayout1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="My To Do List"
        android:textSize="20dp"
        android:textColor="@color/black"
        />
    <ListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/textView1"
        android:choiceMode="multipleChoice"/>

</RelativeLayout>


